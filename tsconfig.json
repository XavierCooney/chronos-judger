{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "DOM", "ES2020"
    ],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "watch": true,
    "downlevelIteration": true,

    "strict": true,
    "alwaysStrict": true,

    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts"
  ],
}
